{
	"name": "bluetorch-harmony",
	"version": "1.0.0",
	"description": "A library for synchronizing a Mongo replica during runtime",
	"scripts": {
		"init-project": "npm config set cafile verdaccio.cer && npm install --registry=https://verdaccio-bluetorch.app.osft/",
