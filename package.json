		"@types/node": "14.18.0",
		"jest": "27.4.4",
		"rimraf": "2.7.1",
		"ts-jest": "27.1.1",
		"ts-node": "9.1.1",
		"typescript": "4.5.3"
	},
	"dependencies": {
		"express": "4.17.1",
		"fartsampler": "0.1.6",
		"metrics-influxdb": "1.0.1",
