		"@types/node": "14.14.5",
		"jest": "26.6.1",
		"rimraf": "2.7.1",
		"ts-jest": "26.4.3",
		"ts-node": "9.0.0",
		"typescript": "4.0.5"
	},
	"dependencies": {
		"express": "4.17.1",
		"fartsampler": "0.1.6",
		"metrics-influxdb": "1.0.1",
